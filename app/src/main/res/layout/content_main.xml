<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.myapplication.MainActivity"
    android:minHeight="140dp"
    android:clickable="true"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My challenge for today is"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:paddingBottom="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Driver 20km on 1L of gas"
        android:id="@+id/textView3"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:minHeight="140dp"
        android:layout_below="@+id/textView"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="activity_challenge"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Walk at least 10,000 steps today"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:minHeight="140dp"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="activity_challenge2"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3."
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:minHeight="140dp"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="title_activity_challenge" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eat at least five portions of fruit and vegetables today (400g)"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:minHeight="140dp"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="activity_challenge3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2."
        android:id="@+id/textView5"
        android:minHeight="140dp"
        android:layout_above="@+id/textView6"
        android:layout_toStartOf="@+id/textView4"
        android:layout_toLeftOf="@+id/textView4"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="title_activity_challenge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1."
        android:id="@+id/textView2"
        android:minHeight="140dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:linksClickable="true"
        android:onClick="title_activity_challenge" />

</RelativeLayout>
